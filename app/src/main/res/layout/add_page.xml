<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <TextView
        android:id="@+id/exerciseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/etExercise"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/etExercise"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toEndOf="@+id/exerciseText"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/durText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration(Hrs):"
        app:layout_constraintTop_toBottomOf="@+id/exerciseText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/etExercise"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/etDur"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/exerciseText"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toEndOf="@+id/durText"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/recordBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record this exercise"
        app:layout_constraintTop_toBottomOf="@+id/etDur"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>